{
  "name": "CSS and XPath checker",
  "version": "0.10.0",
  "description": "A helper tool for to confirm CSS and XPath selector.",
  "icons": {
    "128": "icon_128.png",
    "32": "icon_32.png"
  },
  "manifest_version": 2,
  "browser_action": {
    "name": "Click to toggle GetSelector extension"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "cxchecker.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "contextMenus",
    "declarativeContent",
    "http://*/*",
    "https://*/*"
  ]
}